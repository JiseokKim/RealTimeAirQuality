<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/main_right_layout">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/crimson"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/main_left_layout"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textview_main_clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clock"
            android:textSize="25sp" />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/main_sensor_data_first_row_layout"
           android:layout_weight="1">
           <TextView
               android:id="@+id/main_textview_temperatures"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Fire"
               android:textSize="25sp"
               android:textColor="@color/white"
               android:background="@drawable/rectangle_dark_gray_background"/>

           <TextView
               android:id="@+id/main_textview_humidity"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Gold"
               android:textSize="25sp"
               android:textColor="@color/white"
               android:background="@drawable/rectangle_dark_gray_background"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_sensor_data_second_row_layout"
            android:layout_weight="1">
            <TextView
                android:id="@+id/main_textview_pm10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fire"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_dark_gray_background"/>

            <TextView
                android:id="@+id/main_textview_pm2_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gold"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_dark_gray_background"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_sensor_data_third_row_layout"
            android:layout_weight="1">
            <TextView
                android:id="@+id/main_textview_ozone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fire"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_dark_gray_background"/>

            <TextView
                android:id="@+id/main_textview_co2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gold"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_dark_gray_background"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>